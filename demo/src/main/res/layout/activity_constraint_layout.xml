<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="#ff4081">

            <TextView
                android:id="@+id/cl_demo15_one_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="#b2ff59"
                android:text="姓名"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cl_demo15_two_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:padding="8dp"
                android:background="#ba68c8"
                android:text="联系方式"
                android:textColor="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_demo15_one_label"
                app:layout_goneMarginTop="10dp" />

            <android.support.constraint.Barrier
                android:id="@+id/cl_demo15_barrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="end"
                app:constraint_referenced_ids="cl_demo15_one_label,cl_demo15_two_label" />

            <TextView
                android:id="@+id/cl_demo15_one_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:padding="8dp"
                android:background="#ba68c8"
                android:text="android.support.constraint.Barrier 来对其到一组控件中最大宽度或高度后面"
                android:textColor="@android:color/white"
                app:layout_constraintBaseline_toBaselineOf="@id/cl_demo15_one_label"
                app:layout_constraintStart_toEndOf="@id/cl_demo15_barrier" />

            <TextView
                android:id="@+id/cl_demo15_two_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:padding="8dp"
                android:background="#b2ff59"
                android:text="android.support.constraint.Group 来管理某一组控件的 visibility，layout_goneMarginXxx 设置某个方向参照物为 gone 时的 margin 值"
                android:textColor="@android:color/white"
                app:layout_constraintBaseline_toBaselineOf="@id/cl_demo15_two_label"
                app:layout_constraintStart_toEndOf="@id/cl_demo15_barrier" />

            <android.support.constraint.Group
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:constraint_referenced_ids="cl_demo15_one_label,cl_demo15_one_value" />

            <TextView
                android:id="@+id/cl_demo15_three"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:padding="8dp"
                android:background="#b2ff59"
                android:text="android.support.constraint.Placeholder 用于在屏幕上动态设置内容，只需传递对应控件的 id 即可将对应控件挪到 Placeholder 中。Placeholder 宽高必须设置为 wrap_content，其 visibility 会被忽略。如果视图与占位符在同一屏幕上存在，则其可见性将自动设置为消失"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.constraint.Placeholder
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                app:content="@id/cl_demo15_three"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_demo15_two_value" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
