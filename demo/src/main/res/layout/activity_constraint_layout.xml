                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cl_demo2_left"
                app:layout_constraintTop_toBottomOf="@id/cl_demo2_right4" />

            <TextView
                android:id="@+id/cl_demo2_right6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="#1de9b6"
